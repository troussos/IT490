{% macro customerHeader() %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="list-item controls">
            <a href="{{path('customerViewCreate')}}" class="add-button pure-button">
                Create
            </a>
        </div>
    {% endif %}
{% endmacro %}

{% macro itemHeader() %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="list-item controls">
            <a href="{{path('itemViewCreate')}}" class="add-button pure-button">
                Create
            </a>
        </div>
    {% endif %}
{% endmacro %}


{% macro orderHeader() %}
    <div class="list-item controls">
        <div class="pure-control-group">
            <form class="pure-form pure-form-aligned">
                <input type="text" placeholder="Filter by Order ID" name="order-id"/>
            </form>
        </div>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <br>
            <a href="{{path('orderViewCreate')}}" class="add-button pure-button">
                Create
            </a>
        {% endif %}
    </div>
{% endmacro %}