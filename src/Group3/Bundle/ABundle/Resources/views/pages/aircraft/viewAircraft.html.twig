{% extends "Group3ABundle:page-bases:aircraft.html.twig" %}

{% block content %}
    {% if aircraft is not null %}
        <div class="content-header pure-g">
            <div class="pure-u-3-4">
                <h1 class="content-title">{{aircraft.tailNumber}}</h1>
                <p class="content-subtitle">
                     <span>{{aircraft.type}}</span> Fuel: {{aircraft.fuelQuantity}}
                </p>
            </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="content-controls pure-u-1-4">
                    <a href="{{path('aircraftViewEdit', {'id': aircraft.id})}}" class="edit-button pure-button">Edit</a>
                    <a href="{{path('aircraftDelete', {'id': aircraft.id})}}" class="delete-button pure-button">Delete</a>
                </div>
            {% endif %}
        </div>

        <div class="content-body">
            <table class="pure-table pure-table-striped">
                <thead>
                <tr>
                    <th>Flight Number</th>
                    <th>Departure Date</th>
                    <th>Departure Airport</th>
                    <th>Arrival Date</th>
                    <th>Arrival Airport</th>
                </tr>
                </thead>
                <tbody>
                {% for flight in aircraft.flights %}
                    <tr>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.flightNumber }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.departTime | date('m/d/y h:i:s A')}}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.departAirport }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.arrivalTime| date('m/d/y h:i:s A')}}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.arrivalAirport }}
                            </a>
                        </td>
                    </tr>
                {%  endfor  %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}