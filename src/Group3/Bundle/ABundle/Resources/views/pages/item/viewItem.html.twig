{% extends "Group3ABundle:page-bases:item.html.twig" %}

{% block content %}
    {% if item is not null %}
        <div class="content-header pure-g">
            <div class="pure-u-3-4">
                <h1 class="content-title">{{item.itemName}}</h1>
                <p class="content-subtitle">
                    Quantity: {{item.quantityInStock}} Price: ${{item.price |number_format(2, '.', ',') }}
                </p>
            </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="content-controls pure-u-1-4">
                    <a href="{{path('itemViewEdit', {'id': item.id})}}" class="edit-button pure-button">Edit</a>
                    <a href="{{path('itemDelete', {'id': item.id})}}" class="delete-button pure-button">Delete</a>
                </div>
            {% endif %}
        </div>

        <div class="content-body">
            <p>
                {{item.itemDescription}}
            </p>
        </div>
    {% endif %}
{% endblock %}