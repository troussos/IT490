{% extends "Group3ABundle:page-bases:airport.html.twig" %}

{% block content %}
    {% if airport is not null %}
        <div class="content-header pure-g">
            <div class="pure-u-3-4">
                <h1 class="content-title">{{airport.name}}</h1>
                <p class="content-subtitle">
                     <span>{{airport.code}}</span>
                </p>
            </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="content-controls pure-u-1-4">
                    <a href="{{path('airportViewEdit', {'id': airport.id})}}" class="edit-button pure-button">Edit</a>
                    <a href="{{path('airportDelete', {'id': airport.id})}}" class="delete-button pure-button">Delete</a>
                </div>
            {% endif %}
        </div>

        <div class="content-body">
            <h2>Arrival Flights</h2>
            <table class="pure-table pure-table-striped">
                <thead>
                <tr>
                    <th>Flight Number</th>
                    <th>Departure Date</th>
                    <th>Departure Airport</th>
                    <th>Arrival Date</th>
                    <th>Aircraft Tail Number</th>
                    <th>Aircraft Type</th>
                    <th>Cargo Status</th>
                </tr>
                </thead>
                <tbody>
                {% for flight in airport.arrivalFlights %}
                    <tr>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.flightNumber }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.departTime | date('m/d/y h:i:s A')}}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.departAirport }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.arrivalTime| date('m/d/y h:i:s A')}}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.aircraft.tailNumber }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.aircraft.type }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {% if flight.cargo is empty %}
                                    Empty
                                {% else %}
                                    Has Cargo
                                {% endif %}
                            </a>
                        </td>
                    </tr>
                {%  endfor  %}
                </tbody>
            </table>

            <h2>Departure Flights</h2>
            <table class="pure-table pure-table-striped">
                <thead>
                <tr>
                    <th>Flight Number</th>
                    <th>Departure Date</th>
                    <th>Arrival Date</th>
                    <th>Arrival Airport</th>
                    <th>Aircraft Tail Number</th>
                    <th>Aircraft Type</th>
                    <th>Cargo Status</th>
                </tr>
                </thead>
                <tbody>
                {% for flight in airport.departFlights %}
                    <tr>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.flightNumber }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.departTime | date('m/d/y h:i:s A')}}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.arrivalTime| date('m/d/y h:i:s A')}}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.arrivalAirport }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.aircraft.tailNumber }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {{ flight.aircraft.type }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('flightGet', {id: flight.id}) }}">
                                {% if flight.cargo is empty %}
                                    Empty
                                {% else %}
                                    Has Cargo
                                {% endif %}
                            </a>
                        </td>
                    </tr>
                {%  endfor  %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}